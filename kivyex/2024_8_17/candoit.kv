Interface:
    Screen:
        name: "Splash_Screen"
        canvas.before:
            Color:
                rgba: .6, .8, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        AnchorLayout:
            anchor_x: "center"
            anchor_y: "center"
            BoxLayout:
                orientation: "vertical"
                size_hint: None, None
                width: dp(300)
                height: dp(300)
                Image:
                    source: "cando.png"
                    size_hint: 1, 0.9
                StatLabel:
                    id: status_indicator
                    text: root.status
                    font_size: "32sp"
                    color: [0, 0, 0, 1]
                    size_hint: 1, 0.1